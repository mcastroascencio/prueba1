<div class="container">
  <div class="row">
    <div class='col-md-8 '>
      <div class="panel panel-danger kostic medium">
         <div class="panel-heading">Iniciar Sesión</div>
         <div class="panel-body">
             
                <%= form_tag(:action => 'intento_sesion') do %>
                <%= label_tag(:dni) %>
                <br>
                <%= text_field_tag(:dni) %>
                <br>
                <br>
                <%= label_tag(:password) %>
                <br>
                <%= password_field_tag(:password) %>
                <br>
                <br>
                <%=submit_tag 'Iniciar Sesión' %>
            <% end %>
            
           
              
         </div>
      </div>
    </div>
  </div>
</div>